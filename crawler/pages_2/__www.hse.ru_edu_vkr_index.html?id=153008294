function closePlashka(){
  var pl=document.getElementById("plashka_vishki");
  pl.style.display="none";
  var pl_o=document.getElementById("plashka_control_open");
  pl_o.style.display="block";
}
function showPlashka(){
  var pl=document.getElementById("plashka_vishki");
  pl.style.display="block";
  var pl_o=document.getElementById("plashka_control_open");
  pl_o.style.display="none";
}
</script>
